<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping -2.2" assembly="DAL" namespace="DAL/DB/Concrete/NHibernate">

  <class name="People" lazy="false">
    <id name="Id">
      <generator class="native"/>
    </id>
    <property name="FirstName"/>
    <property name="LastName"/>
    <property name="Age"/>
  </class>

  <class name="Phones" lazy="false">
    <id name="Id">
      <generator class="native"/>
    </id>
    <property name="Number"/>
    <property name="Type"/>
    <property name="PersonId"/>
  </class>
  
</hibernate-mapping>