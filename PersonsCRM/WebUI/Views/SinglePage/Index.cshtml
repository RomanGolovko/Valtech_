@model IEnumerable<WebUI.Models.PersonViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SpaLayout.cshtml";
}

<h2>Index</h2>

<div id="results">
    <p>
        @Ajax.ActionLink("Create New", "Create", "SinglePage", new AjaxOptions { UpdateTargetId = "results" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phones.FirstOrDefault().Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phones.FirstOrDefault().Type)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                @foreach (var phone in item.Phones)
                {
                    <td>
                        @Html.DisplayFor(modelItem => phone.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => phone.Type)
                    </td>
                }
                <td>
                    @Ajax.ActionLink("Edit", "Edit", "SinglePage", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "results" }) |
                    @Ajax.ActionLink("Delete", "Delete", "SinglePage", new { id = item.Id }, new AjaxOptions { UpdateTargetId = "results" })
                </td>
            </tr>
        }

    </table>
</div>
